                        <form class="form-horizontal" action="{{ url('homepage')  }}addQuestion" method="post" id="add-question-form">
                            <div class="form-group">
                                <label for="inputEmail3" class="colour-text col-sm-2 control-label">Question Name</label>
                                <div class="col-sm-4">
