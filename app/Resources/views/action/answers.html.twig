                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Questions <span class="badge">{{ count }}</span> </h3>
                    </div>
                    <div class="panel-body">
                        <div class="panel-group"  id="accordion" role="tablist" aria-multiselectable="true">


                            {% for question in questions %}

                                {% set collapse = random(9999) %}
                                {% set counter = 0  %}

                                <div class="panel panel-default colour-text question-block" id="" data-question-id="{{ question.id }}">
                                    <div class="panel-heading" role="tab" id="{{ collapse }}-headingOne">
                                        <h4 class="panel-title">
                                            <a role="button" class="question-name" >
                                                {{ question.question }}
                                            </a>
                                            <span class="label label-primary edit-question-button">Rename</span>
                                            <span class="label label-danger remove-question-button">Remove</span>
                                            <span class="label label-success count-answers">answers: {{ question.answers|length }}</span>
                                        </h4>

                                        <form class="form-inline rename-question">
                                            <div class="form-group">
                                                <label for="input-{{ collapse }}">Rename question</label>
                                                <input type="text" class="form-control rename-placeholder" id="input-{{ collapse }}" placeholder="{{ question.question }}">
                                            </div>
                                            <button type="button" class="btn btn-default rename-question-button">Rename</button>
                                        </form>

                                    </div>
                                    <div id="{{ collapse }}-collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="{{ collapse }}-headingOne">
                                        <div class="panel-body">

                                            <div class="answers-container">

                                                {% for answer in question.answers %}

                                                    {% set collapse2 = random(9999) %}

                                                    <form class="form-inline add-answer-line">
                                                        <div class="form-group">
                                                            <label for="{{ collapse2 }}-input-name">Answer:</label>
                                                            <input type="text" value="{{ answer.answer }}" name="answer-name" class="form-control listener" id="{{ collapse2 }}-input-name">
                                                            <input type="hidden" value="{{ answer.id }}" class="answer-id">
                                                        </div>
                                                        <div class="form-group right-group">
                                                            <label for="{{ collapse2 }}-input-name-2">Action:</label>
                                                            <select name="identifier" class="form-control change-action listener" id="{{ collapse2 }}-input-name-2">
                                                                <option value="QP" {% if answer.identifire == 'QP' %} selected {% endif %}>Go to Question</option>
                                                                <option value="L" {% if answer.identifire == 'L' %} selected {% endif %}>Go to Link</option>
                                                                <option value="RP" {% if answer.identifire == 'RP' %} selected {% endif %}>Go to Results Popup</option>
                                                                <option value="UP" {% if answer.identifire == 'UP' %} selected {% endif %}>Go to User's Popup</option>
                                                            </select>
                                                        </div>

                                                        <div class="form-group action-block">
                                                            <label for="{{ collapse2 }}-add-2-line"> <span class="glyphicon glyphicon-link"></span> </label>
                                                            <span class="action-string">

                                                                {% if answer.identifire == 'L' %}
                                                                    <input name="action-value" type="text" value="{{ answer.identifireStepID }}" class="form-control input-parameters listener" id="{{ collapse2 }}-add-2-line">
                                                                {% elseif answer.identifire == 'QP' %}
                                                                    <select name="action-value" class="form-control input-parameters listener" id="{{ collapse2 }}-add-2-line">
                                                                        {% for options in questions %}
                                                                            {% if question.id != options.id %}
                                                                                <option value="{{ options.id }}" {% if answer.identifireStepID == options.id %} selected {% endif %}>{{ options.question }}</option>
                                                                            {% endif %}
                                                                        {% endfor %}
                                                                    </select>
                                                                {% elseif answer.identifire == 'RP' %}
                                                                    <select name="action-value" class="form-control input-parameters listener" id="{{ collapse2 }}-add-2-line">
                                                                        {% for result in resultPopUp %}
                                                                            <option value="{{ result.id }}" {% if answer.identifireStepID == result.id %} selected {% endif %}>{{ result.name }}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                {% elseif answer.identifire == 'UP' %}
                                                                    <select name="action-value" class="form-control input-parameters listener" id="{{ collapse2 }}-add-2-line">
                                                                        {% for usPopUp in userPopUp %}
                                                                            <option value="{{ usPopUp.id }}" {% if answer.identifireStepID == usPopUp.id %} selected {% endif %}>{{ usPopUp.popupName }}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                {% endif %}

                                                            </span>
                                                        </div>
                                                        <button type="button" class="btn btn-danger delete-current-answer">Delete</button>
                                                        <button type="button" class="btn btn-info save-answer-button save-answer-input">Save</button>
                                                    </form>

                                                {% endfor %}
                                            </div>

                                                <p>
                                                    <button class="btn btn-primary add-a-answer" type="button" data-toggle="collapse" data-target="#{{ collapse }}-collapse" aria-expanded="true" aria-controls="{{ collapse }}-collapsee">
                                                        + Add a answer
                                                    </button>
                                                </p>
